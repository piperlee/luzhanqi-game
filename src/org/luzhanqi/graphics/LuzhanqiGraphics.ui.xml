<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:image field="gameboard" src="images/board.gif" />
    <ui:style field="css" type="org.luzhanqi.graphics.GameCSS">
    .highlighted {
      outline: solid blue 5px;
    }
    td img {
	     display: block
    }
    .grid{
        margin-top:  2px;
        margin-left: 2px;
    }
    @sprite .back{
        margin-top: 2px;
        margin-left: 0px;
        gwt-image: "gameboard";
    }
  </ui:style>
  <g:AbsolutePanel>
    <g:HorizontalPanel>
      <g:HTMLPanel>
        <div class="{css.back}">
          <g:Grid ui:field="gameGrid" styleName = "{css.grid}"/>
        </div>
      </g:HTMLPanel>  
	    <g:VerticalPanel>
	      <g:VerticalPanel width="500px" height="330px">
	          <g:Label ui:field="curTurn" text="Current Turn:"/>
	          <g:TextArea ui:field="note" />
	      </g:VerticalPanel>
	      <g:HorizontalPanel>
	        <g:Button ui:field="moveBtn" text="Confirm Move"/>
	        <g:Button ui:field="deployBtn" text="Finish Deploy"/>        
	        <!-- test button -->
	        <g:Button ui:field="quickDeploy" text="Quick Deploy"/>
	      </g:HorizontalPanel>
	      <g:Grid ui:field="deployGrid" />
	     </g:VerticalPanel>
	   </g:HorizontalPanel>
   </g:AbsolutePanel>
  
</ui:UiBinder> 